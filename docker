# Use official Node.js image
FROM node:18

# Create app directory
WORKDIR /usr/src/app

# Copy package files first (better caching for dependencies)
COPY package*.json ./

# Install dependencies
RUN npm install --production

# Copy the rest of the project files
COPY . .

# Expose port
EXPOSE 3000

# Start the app
CMD ["node", "server.js"]
